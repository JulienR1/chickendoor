{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"noUnusedLocals": true,
		"noImplicitReturns": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"@root/*": ["src/*"],
			"@shared/*": ["../shared/*"]
		},
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"],
	"references": [
		{
			"path": "../shared"
		}
	]
}
