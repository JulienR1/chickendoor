{
	"compilerOptions": {
		"esModuleInterop": true,
		"jsx": "react",
		"module": "esnext",
		"moduleResolution": "node",
		"lib": ["dom", "esnext"],
		"strict": true,
		"sourceMap": true,
		"target": "esnext",
		"baseUrl": ".",
		"paths": {
			"@root/*": ["src/*"],
			"@shared/*": ["../shared/*"]
		}
	},
	"exclude": ["node_modules"],
	"references": [
		{
			"path": "../shared"
		}
	]
}
